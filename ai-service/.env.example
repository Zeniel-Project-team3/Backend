OPENAI_API_KEY=your_openai_api_key

# Option A) Java(Spring)와 동일하게 사용
# 예: 127.0.0.1:5432/postgres 또는 db-host:5432/postgres
DB_URL=127.0.0.1:5432/postgres
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Option B) Python 개별 설정
DB_HOST=localhost
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=postgres

# LLM 추천은 항상 켜짐. quick 모드로 속도 최적화.
LLM_MODE=quick
LLM_MAX_CASES=5
LLM_MAX_OUTPUT_TOKENS=220
OPENAI_TIMEOUT_SECONDS=12
# CHAT_MODEL=gpt-4o-mini
