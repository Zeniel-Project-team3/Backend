OPENAI_API_KEY=your_openai_api_key

# Option A) Java(Spring)와 동일하게 사용
# 예: 127.0.0.1:5432/postgres 또는 db-host:5432/postgres
DB_URL=127.0.0.1:5432/postgres
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Option B) Python 개별 설정
DB_HOST=localhost
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=postgres

# 엑셀 ingest 시 사용. 비우면 POST /api/v1/ingest-employment-training 호출 시 503.
# INGEST_EXCEL_PATH=/path/to/상담리스트_가공데이터_202602.xlsx

# LLM 추천은 항상 켜짐. quick 모드로 속도 최적화.
LLM_MODE=quick
LLM_MAX_CASES=5
LLM_MAX_OUTPUT_TOKENS=220
OPENAI_TIMEOUT_SECONDS=12
# CHAT_MODEL=gpt-4o-mini
